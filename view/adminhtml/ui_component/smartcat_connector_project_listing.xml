<?xml version="1.0" ?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
	<argument name="context" xsi:type="configurableObject">
		<argument name="class" xsi:type="string">Magento\Framework\View\Element\UiComponent\Context</argument>
		<argument name="namespace" xsi:type="string">smartcat_connector_project_listing</argument>
	</argument>
	<argument name="data" xsi:type="array">
		<item name="js_config" xsi:type="array">
			<item name="provider" xsi:type="string">smartcat_connector_project_listing.smartcat_connector_project_listing_data_source</item>
		</item>
	</argument>
	<settings>
		<spinner>smartcat_connector_project_columns</spinner>
		<deps>
			<dep>smartcat_connector_project_listing.smartcat_connector_project_listing_data_source</dep>
		</deps>
	</settings>
	<dataSource component="Magento_Ui/js/grid/provider" name="smartcat_connector_project_listing_data_source">
		<settings>
			<updateUrl path="mui/index/render"/>
			<storageConfig>
				<param name="indexField" xsi:type="string">id</param>
			</storageConfig>
		</settings>
		<aclResource>SmartCat_Connector::Project</aclResource>
		<dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="smartcat_connector_project_listing_data_source">
			<settings>
				<requestFieldName>id</requestFieldName>
				<primaryFieldName>id</primaryFieldName>
			</settings>
		</dataProvider>
	</dataSource>
	<listingToolbar name="listing_top">
		<settings>
			<sticky>true</sticky>
		</settings>
		<bookmark name="bookmarks"/>
		<columnsControls name="columns_controls"/>
		<filters name="listing_filters">
			<filterSelect name="profile_id" provider="${ $.parentName }" component="Magento_Ui/js/form/element/ui-select" template="ui/grid/filters/elements/ui-select">
				<settings>
					<options class="SmartCat\Connector\Model\Config\Source\ProfilesList"/>
					<caption translate="true">Select...</caption>
					<label translate="true">Profile</label>
					<dataScope>profile_id</dataScope>
					<imports>
						<link name="visible">componentType = column, index = ${ $.index }:visible</link>
					</imports>
				</settings>
			</filterSelect>
			<filterSelect name="status" provider="${ $.parentName }" component="Magento_Ui/js/form/element/ui-select" template="ui/grid/filters/elements/ui-select">
				<settings>
					<options class="SmartCat\Connector\Model\Config\Source\ProjectStatusList"/>
					<caption translate="true">Select...</caption>
					<label translate="true">Status</label>
					<dataScope>status</dataScope>
					<imports>
						<link name="visible">componentType = column, index = ${ $.index }:visible</link>
					</imports>
				</settings>
			</filterSelect>
		</filters>
		<paging name="listing_paging"/>
	</listingToolbar>
	<columns name="smartcat_connector_project_columns">
		<column name="id" sortOrder="10">
			<settings>
				<sorting>desc</sorting>
				<label translate="true">ID</label>
			</settings>
		</column>
		<column name="element" sortOrder="20">
			<settings>
				<filter>text</filter>
				<label translate="true">Elements</label>
			</settings>
		</column>
		<column name="profile_id" class="SmartCat\Connector\Ui\Component\Listing\Column\ProjectProfileColumn" sortOrder="30">
			<settings>
				<label translate="true">Profile</label>
			</settings>
		</column>
		<column name="translate" sortOrder="40">
			<settings>
				<label translate="true">Translation</label>
			</settings>
		</column>
		<column name="status" class="SmartCat\Connector\Ui\Component\Listing\Column\ProjectStatusColumn" sortOrder="50">
			<settings>
				<label translate="true">Status</label>
			</settings>
		</column>
		<column name="sc_project" class="SmartCat\Connector\Ui\Component\Listing\Column\SmartCatProjectColumn" sortOrder="51">
			<settings>
				<bodyTmpl>ui/grid/cells/html</bodyTmpl>
				<label translate="true">Smartcat project</label>
			</settings>
		</column>
		<column name="deadline" sortOrder="60">
			<settings>
				<filter>dateRange</filter>
				<label translate="true">Deadline</label>
			</settings>
		</column>
		<column name="comment" sortOrder="70">
			<settings>
				<filter>text</filter>
				<label translate="true">Comment</label>
			</settings>
		</column>
	</columns>
</listing>
