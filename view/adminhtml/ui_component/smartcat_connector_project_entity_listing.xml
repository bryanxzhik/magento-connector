<?xml version="1.0" ?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="context" xsi:type="configurableObject">
        <argument name="class" xsi:type="string">Magento\Framework\View\Element\UiComponent\Context</argument>
        <argument name="namespace" xsi:type="string">smartcat_connector_project_entity_listing</argument>
    </argument>
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">smartcat_connector_project_entity_listing.smartcat_connector_project_entity_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>smartcat_connector_project_entity_columns</spinner>
        <deps>
            <dep>smartcat_connector_project_entity_listing.smartcat_connector_project_entity_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource component="Magento_Ui/js/grid/provider" name="smartcat_connector_project_entity_listing_data_source">
        <settings>
            <updateUrl path="mui/index/render"/>
            <storageConfig>
                <param name="indexField" xsi:type="string">id</param>
            </storageConfig>
        </settings>
        <aclResource>SmartCat_Connector::ProjectEntity</aclResource>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="smartcat_connector_project_entity_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <settings>
            <sticky>true</sticky>
        </settings>
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <paging name="listing_paging"/>
    </listingToolbar>
    <columns name="smartcat_connector_project_entity_columns">
        <column name="id" sortOrder="10">
            <settings>
                <sorting>desc</sorting>
                <label translate="true">ID</label>
            </settings>
        </column>
        <column name="entity_id" class="SmartCat\Connector\Ui\Component\Listing\Column\EntityColumn" sortOrder="20">
            <settings>
                <label translate="true">Element</label>
                <bodyTmpl>ui/grid/cells/html</bodyTmpl>
            </settings>
        </column>
        <column name="profile_id" class="SmartCat\Connector\Ui\Component\Listing\Column\ProjectProfileColumn" sortOrder="30">
            <settings>
                <label translate="true">Profile</label>
            </settings>
        </column>
        <column name="source_lang" class="SmartCat\Connector\Ui\Component\Listing\Column\LanguageColumn" sortOrder="40">
            <settings>
                <filter>select</filter>
                <options class="SmartCat\Connector\Model\Config\Source\LanguagesList"/>
                <label translate="true">Source Language</label>
                <dataType>select</dataType>
            </settings>
        </column>
        <column name="target_lang" class="SmartCat\Connector\Ui\Component\Listing\Column\TargetLangColumn" sortOrder="50">
            <settings>
                <filter>select</filter>
                <options class="SmartCat\Connector\Model\Config\Source\LanguagesList"/>
                <label translate="true">Target Language</label>
                <dataType>select</dataType>
            </settings>
        </column>
        <column name="status" class="SmartCat\Connector\Ui\Component\Listing\Column\DocumentStatusColumn" sortOrder="60">
            <settings>
                <label translate="true">Status</label>
            </settings>
        </column>
        <column name="deadline" sortOrder="70">
            <settings>
                <filter>dateRange</filter>
                <dataType>date</dataType>
                <dateFormat>Y-MM-dd HH:mm</dateFormat>
                <label translate="true">Deadline</label>
            </settings>
        </column>
        <column name="comment" sortOrder="80">
            <settings>
                <label translate="true">Comment</label>
            </settings>
        </column>
        <column name="sc_document" class="SmartCat\Connector\Ui\Component\Listing\Column\SmartCatDocumentColumn" sortOrder="90">
            <settings>
                <bodyTmpl>ui/grid/cells/html</bodyTmpl>
                <label translate="true">Smartcat project</label>
            </settings>
        </column>
    </columns>
</listing>
